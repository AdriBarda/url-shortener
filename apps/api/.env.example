# Server
PORT=3000
NODE_ENV=development

# CORS (who can call the API from the browser)
CORS_ORIGIN=http://localhost:5173

# Public URL used to build short links (what users will open in the browser)
BASE_SHORT_URL=http://localhost:3000

# Web app URL (used in HTML error pages / "Go to app" links)
WEB_APP_URL=http://localhost:5173

# Supabase (REQUIRED)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SECRET_HERE
SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_JWT_AUD=

# Redis (OPTIONAL - enables redirect cache)
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=YOUR_REDIS_PORT
REDIS_USERNAME=default
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_TLS=true

# Session encryption (32 bytes base64)
SESSION_ENC_KEY=GENERATE_A_32_BYTE_KEY_BASE64